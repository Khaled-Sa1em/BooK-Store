@model BookAuthorViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <input asp-for="BookId" readonly class="form-control" />
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">

                <img src="~/images/@Model.ImageUrl" class="img-thumbnail" style="width:200px" />

                <label asp-for="Img" class="control-label"></label>
                <input asp-for="Img" name="Img" type="file" class="form-control" value="@Model.ImageUrl"/>
                @*<span asp-validation-for="Img" class="text-danger"></span>*@
            </div>
            <input asp-for="ImageUrl" name="ImageUrl" type="hidden" class="form-control" />

            <div class="form-group">
                <label asp-for="AutherId" class="control-label"></label>
                <select asp-for="AutherId" class="form-select"
                        asp-items="@(new SelectList(Model.Authers,"Id","FullName"))">
                    <option value="">Choose an Auther</option>
                </select>
                <span asp-validation-for="AutherId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_Validation");}
}
